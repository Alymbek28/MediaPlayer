<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:background="#091227">

    <ImageView
        android:id="@+id/ic_menu"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="28dp"
        android:src="@drawable/ic_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ic_search"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_playlist"
        android:textStyle="bold"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="88dp"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:text="My Playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_poster"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="137dp"
        android:src="@drawable/poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_Believer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_poster"
        android:layout_marginLeft="93dp"
        android:layout_marginTop="16dp"
        android:text="Believer"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_imagine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Believer"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="5dp"
        android:text="IMAGINE DRAGON"
        android:textColor="#A5C0FFB2"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/img_poster_1"
        android:layout_marginLeft="278dp"
        android:layout_marginTop="137dp"
        android:src="@drawable/poster_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_moment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_poster"
        android:layout_marginLeft="313dp"
        android:layout_marginTop="16dp"
        android:text="Shortwave"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/odesza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_moment"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="5dp"
        android:text="ODESZA"
        android:textColor="#A5C0FFB2"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/img_poster1"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="398dp"
        android:src="@drawable/poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/txt_Believer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_poster1"
        android:layout_marginLeft="93dp"
        android:text="Believer"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txt_imagine1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Believer1"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="5dp"
        android:text="IMAGINE DRAGON"
        android:textColor="#A5C0FFB2"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/img_poster_11"
        android:layout_marginLeft="278dp"
        android:layout_marginTop="398dp"
        android:src="@drawable/poster_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_moment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_poster_11"
        android:layout_marginLeft="313dp"
        android:layout_marginTop="16dp"
        android:text="Shortwave"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/odesza1"
        android:layout_marginLeft="340dp"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txt_moment1"
        android:textColor="#A5C0FFB2"
        android:text="ODESZA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginLeft="2.57dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="36dp"
        android:src="@drawable/poster_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/chaff"
        android:textSize="18dp"
        android:layout_marginLeft="77.77dp"
        android:textColor="@color/white"
        android:layout_marginTop="105dp"
        android:layout_below="@+id/txt_imagine1"
        android:text="Chaff  Dust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/hyonna"
        android:textColor="#A5C0FFB2"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/chaff"
        android:text="HYONNA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ic_skip_previous"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="763dp"
        android:src="@drawable/ic_skip_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/ic_pause"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="763dp"
        android:src="@drawable/ic_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginLeft="310dp"
        android:id="@+id/ic_skip_next"
        android:layout_marginTop="763dp"
        android:src="@drawable/ic_skip_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>